{% extends 'base.jinja2' %}

{% block subtitle %}Add a new donation{% endblock subtitle %}

{% block content %}
<form method="POST">
    {% if error %}<p>{{ error }}</p>{% endif %}
    <label for="name-input">Username:</label><input id="name-input" type="text" name="name"><br>
    <label for="number">Donation Amount: </label><input type="number" name="number"><br>
    <input type="submit" value="Add donation!">
</form>
{% endblock content %}
